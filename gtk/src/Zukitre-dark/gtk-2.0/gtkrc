      function        = BOX
      state           = ACTIVE
      shadow          = IN
      file            = "assets/button-pressed.png"
      border          = {3,3,3,3}
      stretch         = TRUE
    }
    image {
      function        = BOX
      state           = PRELIGHT
      shadow          = IN
      file            = "assets/button-pressed-hover.png"
      border          = {3,3,3,3}
      stretch         = TRUE
    }
    image {
      function        = BOX
      state           = INSENSITIVE
      file            = "assets/button-insensitive.png"
      border          = {3,3,3,3}
      stretch         = TRUE
    }
    image {
      function        = BOX
      file            = "assets/button-default.png"
      border          = {3,3,3,3}
      stretch         = TRUE
    }
  }
}

